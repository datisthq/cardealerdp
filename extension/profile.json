{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Car Dealer Data Package Profile",
  "allOf": [
    { "$ref": "https://datapackage.org/profiles/2.0/datapackage.json" },
    { "$ref": "#/definitions/Package" }
  ],
  "definitions": {
    "Package": {
      "type": "object",
      "required": ["dealer", "resources"],
      "properties": {
        "dealer": {
          "$ref": "#/definitions/Dealer"
        },
        "resources": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": [
            {
              "$ref": "#/definitions/Resource"
            }
          ]
        }
      }
    },
    "Dealer": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Resource": {
      "type": "object",
      "required": ["name", "schema"],
      "properties": {
        "name": {
          "const": "car"
        },
        "schema": {
          "$ref": "#/definitions/Schema"
        }
      }
    },
    "Schema": {
      "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.1.0/schemas/car.json"
    }
  }
}
