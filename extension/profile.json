{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Car Dealer Data Package Profile",
  "allOf": [
    { "$ref": "https://datapackage.org/profiles/2.0/datapackage.json" },
    { "$ref": "#/definitions/Package" }
  ],
  "definitions": {
    "Package": {
      "type": "object",
      "required": ["dealer", "resources"],
      "properties": {
        "dealer": {
          "$ref": "#/definitions/Dealer"
        },
        "resources": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": [
            {
              "$ref": "#/definitions/Resource"
            }
          ]
        }
      }
    },
    "Dealer": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "description": "A title for the dealer"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Resource": {
      "oneOf": [
        {
          "$ref": "#/definitions/CarResource"
        },
        {
          "$ref": "#/definitions/ShowroomResource"
        }
      ]
    },
    "CarResource": {
      "type": "object",
      "required": ["name", "schema"],
      "not": {
        "required": ["path"]
      },
      "properties": {
        "name": {
          "const": "car"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Car table schema",
          "items": [
            {
              "type": "object"
            }
          ]
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.1.0/extension/schemas/car.json"
        }
      }
    },
    "ShowroomResource": {
      "type": "object",
      "required": ["name", "schema"],
      "not": {
        "required": ["path"]
      },
      "properties": {
        "name": {
          "const": "showroom"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Showroom table schema",
          "items": [
            {
              "type": "object"
            }
          ]
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.1.0/extension/schemas/showroom.json"
        }
      }
    }
  }
}
