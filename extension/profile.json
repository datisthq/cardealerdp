{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Car Dealer Data Package Profile",
  "type": "object",
  "required": ["dealer", "resources"],
  "properties": {
    "dealer": {
      "$ref": "#/definitions/dealer"
    },
    "resources": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/carResource"
        }
      ]
    }
  },
  "definitions": {
    "dealer": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "carResource": {
      "type": "object",
      "required": ["name", "schema"],
      "properties": {
        "name": {
          "const": "car"
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.1.1/schemas/car.json"
        }
      }
    }
  }
}
