{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Car Dealer Data Package Profile",
  "allOf": [
    { "$ref": "https://datapackage.org/profiles/2.0/datapackage.json" },
    { "$ref": "#/definitions/Package" }
  ],
  "definitions": {
    "Package": {
      "type": "object",
      "required": ["resources"],
      "properties": {
        "resources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Resource"
          }
        }
      }
    },
    "Resource": {
      "oneOf": [
        {
          "$ref": "#/definitions/CarResource"
        },
        {
          "$ref": "#/definitions/DealerResource"
        },
        {
          "$ref": "#/definitions/ShowroomResource"
        }
      ]
    },
    "CarResource": {
      "type": "object",
      "required": ["name", "data", "schema"],
      "not": {
        "required": ["path"]
      },
      "properties": {
        "name": {
          "const": "car"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Car table schema",
          "minItems": 1,
          "items": {
            "type": "object"
          }
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.2.3/extension/schemas/car.json"
        }
      }
    },
    "DealerResource": {
      "type": "object",
      "required": ["name", "data", "schema"],
      "not": {
        "required": ["path"]
      },
      "properties": {
        "name": {
          "const": "dealer"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Dealer table schema",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object"
          }
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.2.3/extension/schemas/dealer.json"
        }
      }
    },
    "ShowroomResource": {
      "type": "object",
      "required": ["name", "data", "schema"],
      "not": {
        "required": ["path"]
      },
      "properties": {
        "name": {
          "const": "showroom"
        },
        "data": {
          "type": "array",
          "description": "Data items have to conform to the Showroom table schema",
          "minItems": 1,
          "items": {
            "type": "object"
          }
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.2.3/extension/schemas/showroom.json"
        }
      }
    }
  }
}
