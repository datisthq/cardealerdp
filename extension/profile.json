{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Car Dealer Data Package Profile",
  "allOf": [
    {
      "$ref": "https://datapackage.org/profiles/2.0/datapackage.json"
    }
  ],
  "type": "object",
  "required": ["dealer", "resources"],
  "properties": {
    "dealer": {
      "$ref": "#/definitions/dealer"
    },
    "resources": {
      "type": "array",
      "prefixItems": [
        {
          "$ref": "#/definitions/carResource"
        }
      ]
    }
  },
  "definitions": {
    "dealer": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "carResource": {
      "name": {
        "const": "car"
      },
      "schema": {
        "const": "https://raw.githubusercontent.com/datisthq/cardealerdp/v0.1.1/schemas/car.json"
      }
    }
  }
}
