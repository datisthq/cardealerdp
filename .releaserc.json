{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "pnpm ci:version ${nextRelease.version}"
      }
    ],
    ["@semantic-release/exec", { "publishCmd": "pnpm generate" }],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version}",
        "assets": [
          "extension/package.json",
          "extension/profile.json",
          "extension/schemas/*.json",
          "extension/content/docs/specification/profile.md",
          "extension/content/docs/specification/data/*.md",
          "sdk-py/pyproject.toml",
          "sdk-py/*/profile.py",
          "sdk-py/*/schemas/*.py",
          "sdk-ts/package.json",
          "sdk-ts/profile.ts",
          "sdk-ts/schemas/*.ts",
          "package.json"
        ]
      }
    ],
    ["@semantic-release/exec", { "publishCmd": "pnpm build " }],
    ["@semantic-release/exec", { "publishCmd": "pnpm ci:publish " }],
    ["@semantic-release/github"]
  ]
}
