{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    [
      "@semantic-release/exec",
      { "prepareCmd": "pnpm ci:version ${nextRelease.version}" }
    ],
    ["@semantic-release/exec", { "prepareCmd": "pnpm generate" }],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version}",
        "assets": [
          ["extension", "!**/node_modules/**", "!**/build/**"],
          ["sdk-py", "!**/node_modules/**", "!**/build/**"],
          ["sdk-ts", "!**/node_modules/**", "!**/build/**"],
          "package.json"
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm build",
        "publishCmd": "pnpm ci:publish "
      }
    ],
    ["@semantic-release/github"]
  ]
}
