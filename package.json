{
  "name": "project",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "slug": "cardealerdp",
  "title": "Cardealer DP",
  "description": "Cardealer DP (Car Dealer Data Package) is a data exchange format that helps car dealerships share their car listings. It is developed on top of the Data Package standard",
  "repository": "https://github.com/datisthq/cardealerdp",
  "homepage": "https://cardealerdp.datist.io",
  "author": "Evgeny Karev",
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "bump": "ncu -ws -u",
    "ci:install": "pnpm install --ignore-scripts",
    "ci:version": "pnpm -r exec pnpm version --no-git-tag-version",
    "clean": "npkill -D -x -y -nu && rm pnpm-lock.yaml",
    "configure": "node tasks/configure.ts",
    "generate": "node tasks/generate.ts",
    "format": "biome check --write",
    "lint": "biome check",
    "prepare": "husky",
    "start": "pnpm -F extension start",
    "test": "pnpm lint && pnpm type",
    "type": "tsc --noEmit"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "8.0.6",
